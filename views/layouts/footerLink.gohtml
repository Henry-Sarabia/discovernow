{{define "footerLink"}}
    {{if $args := . | require "Text" "string" | require "Href" "string" | args}}
        <a class="footer__link has-text-left is-size-6 has-text-celadon is-block is-hidden-mobile" href="{{$args.Href}}">
            {{$args.Text}}
        </a>
        <a class="footer__link has-text-centered is-size-6 has-text-celadon is-block is-hidden-tablet" href="{{$args.Href}}">
            {{$args.Text}}
        </a>
    {{end}}
{{end}}