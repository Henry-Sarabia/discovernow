{{define "splashSubheader"}}
    {{if $args := . | require "Text" "string" | args}}
        <h2 class="splash__subheader_desktop is-family-secondary has-text-grey-dark has-text-weight-medium is-size-3 is-hidden-mobile">
            {{$args.Text}}
        </h2>
        <h2 class="splash__subheader_mobile is-family-secondary has-text-grey-dark has-text-weight-medium is-size-4 has-text-centered is-spaced is-hidden-tablet">
            {{$args.Text}}
        </h2>
    {{end}}
{{end}}